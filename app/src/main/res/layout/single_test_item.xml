<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_test_l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name :"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_test_l5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joining Date and Time :"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_test_l11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number:"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test_l5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_test_l13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status :"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test_l11"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/txt_test4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_test5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test13"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_test11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="28dp"
        android:text="@string/load"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/txt_test_l5"
        app:layout_constraintTop_toBottomOf="@+id/txt_test4" />

    <TextView
        android:id="@+id/txt_test12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foregroundGravity="center"
        android:text="@string/load"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_test13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test12"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_____________________________________"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_test_l13"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>